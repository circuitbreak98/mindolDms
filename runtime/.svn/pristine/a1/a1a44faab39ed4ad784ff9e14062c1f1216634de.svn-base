
.nav-justified {
  background-color: #E31C39;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.nav-justified > li > a {	
  padding-top: 10px;
  padding-bottom: 10px;
  margin-bottom: 0;
  font-weight: bold;
  color: #F7F7F7;
  text-align: center;
  font-size:14px;
  background-color: #E31C39; /* Old browsers */
  background-image: -webkit-gradient(linear, left top, left bottom, from(#FF0000), to(#E31C39));
  background-image: -webkit-linear-gradient(top, #FF0000 0%, #E31C39 100%);
  background-image:      -o-linear-gradient(top, #FF0000 0%, #E31C39 100%);
  background-image:         linear-gradient(to bottom, #FF0000 0%,#E31C39 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#FF0000', endColorstr='#E31C39',GradientType=0 ); /* IE6-9 */
  background-repeat: repeat-x; /* Repeat the gradient */
  /* border-bottom: 1px solid #d5d5d5; */
}

.nav-justified > li > a:hover, 
.nav-justified > li > a:focus
{
  background-color: #FF4719;
  /* background-image: none; */
  background-image: -webkit-gradient(linear, left top, left bottom, from(#FF0000), to(#FF4719));
  background-image: -webkit-linear-gradient(top, #FF0000 0%, #FF4719 100%);
  background-image:      -o-linear-gradient(top, #FF0000 0%, #FF4719 100%);
  background-image:         linear-gradient(to bottom, #FF0000 0%,#FF4719 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#FF0000', endColorstr='#FF4719',GradientType=0 ); /* IE6-9 */
  background-repeat: repeat-x; /* Repeat the gradient */
}

.nav-justified .activeMenu a,
.nav-justified .activeMenu a:hover, 
.nav-justified .activeMenu a:focus
{
  background-color: #FF4719;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#FF0000), to(#FF4719));
  background-image: -webkit-linear-gradient(top, #FF0000 0%, #FF4719 100%);
  background-image:      -o-linear-gradient(top, #FF0000 0%, #FF4719 100%);
  background-image:         linear-gradient(to bottom, #FF0000 0%,#FF4719 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#FF0000', endColorstr='#FF4719',GradientType=0 ); /* IE6-9 */    
}

.nav-justified > li:first-child > a {
  border-radius: 5px 5px 0 0;
}
.nav-justified > li:last-child > a {
  border-bottom: 0;
  border-radius: 0 0 5px 5px;
}


@media (min-width: 768px) {
  .nav-justified {
    max-height: 52px;
  }
  .nav-justified>li {
    display: table-cell;
    width: 170px; 
   /*  width: 1%; */
  }
  .nav-justified > li > a {
    /* border-right: 1px solid #d5d5d5; */
     border-left: 1px solid #E60000; 
  }
  .nav-justified > li:first-child > a {
    border-left: 0;
    border-radius: 5px 0 0 5px;
  }
  .nav-justified > li:last-child > a {
    border-right: 0;
    border-radius: 0 5px 5px 0;
  }
}

/* Responsive: Portrait tablets and up */
@media screen and (min-width: 768px) {
  /* Remove the padding we set earlier */
  .masthead,
  .marketing,
  .footer {
    padding-right: 0;
    padding-left: 0;
  }
}
