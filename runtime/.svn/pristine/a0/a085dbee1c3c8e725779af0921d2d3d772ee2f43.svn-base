@charset "utf-8";

/*       
	1. layout start 
	2. common class start 
*/


/*********************************** 1. layout start *************************************************/
/* html, body */
html, body{width:100%; 
		height:100%}
body {background:#fff; 
		 position:relative; 
		  overflow:auto;   
		 /* overflow:hidden; */  
		margin:0; 
		font-family:"돋움",Dotum,Arial,sans-serif;
		font-size:12px;
		}
		
table th, td { text-align: center; }		
		
/* header */
#headerDiv { width:100%; 
				/*  height:100px; */
				 position:relative;
				 overflow:hidden; 
				 z-index:30; 
				 }

#headerDiv #topDiv { 
							height:60px;
							position:relative;
							padding-left :10px;
							padding-right :10px;
							}
							
#headerDiv #topDiv #logoImg {width:120px; height:48px;} 		
#headerDiv #topDiv #topRightMenuDiv {padding-top:10px;}	
#headerDiv #topDiv #topRightMenuDiv #topRightMenuUl {}

/* 메뉴Navigation Bar */						
#headerDiv #navDiv { width:100%; 
							height:50px;
						    background:url(../img/gnb_bg.gif) repeat-x;
						    }
#headerDiv #navDiv li { padding-left:10px;}	
#headerDiv #navDiv .navUlMenu {padding-top:10px;
										  font-weight: bold;
										  font-size:14px;}					    
#headerDiv #navDiv  a:link{color: #FFFFFF;}
#headerDiv #navDiv  a:visited{color: #FFFFFF;}
#headerDiv #navDiv  a:hover {color: #FFFFFF;}
#headerDiv #navDiv  a:active {color: #FFFFFF;}

/* content  */
#contentDiv { width:100%; 
				  min-height:100%;
				  position:relative;
				  z-index:10; 
				  margin: -100px 0 -81px 0;
				 /* margin: -100px 0 -110px 0; /* footer 및 header div 위치 고정용 설정  */
				   }
*html #contentDiv { height:100%; }
				  
#contentDiv #contentWrapDiv { padding-top:100px; min-height:600px;}			
										    
#contentDiv #contentWrapDiv #titleDiv { width:100%; 
												   height:30px;
												   }	
#contentDiv #contentWrapDiv #titleDiv p {padding-top:5px;
													 padding-left:20px;
													 font-size:12px; 
													 font-weight:bold;}												   

#contentDiv #contentWrapDiv #searchDiv { width:100%; 
													  height:70px;
													  }		
.searchFormDiv { width:98%;
					  height: 50px;
					  margin: 0 auto;
					  padding: 5px;
					  background:#f0f0f0; }
																		  
.searchBtnDiv {
					padding-top:10px;	
					padding-right:10px;
				   }
																		  
.searchFormDiv .formGroup 	{padding-top:10px;
									 padding-left:20px;
									 float:left;}																		  
.searchFormDiv  .formGroup div{float:left; padding-left:5px;}

.searchFormDiv  .formGroupLabel {padding-top:5px;}
							
#contentDiv #contentWrapDiv #listDiv { width:98%; margin: 0 auto; }	
#contentDiv #contentWrapDiv #listDiv #DealInfoDiv { padding-top:10px;}
#contentDiv #contentWrapDiv #listDiv #listTitleDiv {height:25px; padding-top:5px; padding-left:10px;padding-right:10px;}
#contentDiv #contentWrapDiv #listDiv #listTitleDiv .listTitleP {margin:0px;}
#contentDiv #contentWrapDiv #listDiv #listTitleDiv .listTitleInfo {margin:0px;	}
																
#contentDiv #contentWrapDiv #listDiv #listTableDiv {}
#contentDiv #contentWrapDiv #listDiv #listTableDiv .listTable {}		
#contentDiv #contentWrapDiv #listDiv #listTableDiv .listTable th {height:25px; padding:2px;}
#contentDiv #contentWrapDiv #listDiv #listTableDiv .listTable td {height:20px; padding:2px;}
.table-noDataInfo {padding-top:10px;}

/* footer */
#footer {  width:100%;
			 height:81px;
    		 position:relative;
    		 overflow:hidden; 
    		 margin:0;padding:0;
			/*  z-index:20; */
			 }
#footer #footerP { text-align:center;
						margin:0px;				
					   }
/**************************************** layout end ********************************************/    	
	 
/**************************************** 2. login layout start ******************************************/
#loginWrapDiv { position:relative; width:795px; margin: 100px auto;  }
.contents_all { width:100%; position:relative; margin:40px 0 30px 0; }
.page_tit { width:100%; clear:both; }
.clear { clear:both;}                 
.loginDiv {position:relative; width:795px; height:316px;  background:url(../img/login_box_bg.gif) no-repeat; margin-top:20px;}
.loginDiv .login-option { float:left; width:350px; height:40px; margin:30px 0 0 40px; }
.loginDiv .login-option li { float:left; width:120px; height:40px; font-size:13px; font-weight:bold; color:#000000; }
.loginDiv .login-form { width:270px;  margin:55px 0 0 78px; clear:both; list-style:none;}
.loginDiv .login-form li { width:255px; font-weight: normal; font-size:12px;height:32px;}
.loginDiv .login-form input.input { width:240px; padding:5px; }
.loginDiv .login_bu { width:472px; text-align:right; padding-top:87px; }
.loginDiv .member-btn { clear:both; padding-top:64px; *padding-top:15px; padding-left:381px;}
.loginDiv .member-text-hide { position:relative; margin:42px 0 0 40px;  width:300px; height:100px; background:#ffffff;}
.mt-10 { margin-top:10px;}

/**************************************** 2. login layout end ******************************************/

/**************************************** 3. common class start ***************************************/
.float-left {float:left;}	 
.float-right {float:right;}	

/* meneul */
.navUl {margin:0px; list-style:none;}
.navUl li {float:left;}

.text-center {text-align:center;}
.text-right {text-align:right;}


/* paging style */
.page-wrap { width:auto; margin-top:20px; text-align:center;}
.page-wrap .page-list { display:inline; width:750px; text-align:center; height:25px; }
.page-wrap .page-list li { display:inline; *zoom:1; *margin:0 2px; *vertical-align:top; font-family:"돋움", "굴림",Arial, Helvetica, sans-serif;width:25px;*padding:0px;}
.page-wrap .page-list li a { display:inline-block; *display:inline; *zoom:1; padding:5px 5px; min-width:16px; text-decoration:none; border:1px solid #ddd; }
.pgBtn a:hover { color:#ea002c; font-weight:bold;}
.pgEmpty a { cursor:default; color:#e6e6e6; }
.pgEmpty a:hover { cursor:default; color:#e6e6e6; }
.pgEmpty a:visited { cursor:default; color:#e6e6e6; }
.pgEmpty a:active { cursor:default; color:#e6e6e6; }
.pgEmpty a:link { cursor:default; color:#e6e6e6;  }
.jpage a:hover { /* background:#ea002c; color:#ffffff; */ color:#ea002c; font-weight:bold;}
.jpage.now a { color:#ea002c; } 

/**************************************** 3. common class end ***************************************/


