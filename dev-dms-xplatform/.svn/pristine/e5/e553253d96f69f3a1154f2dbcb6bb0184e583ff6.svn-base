	//실행ADL 경로
	strADLPath = application.xadl;

	//로컬, 개발, 운영 구분
	if(strADLPath.indexOf("localhost") != -1 || strADLPath.indexOf("file:") != -1) 
	{
		gv_domainCd = "DMS_INTRA"; //기본시스템을 해피포인트 운영정보시스템 으로 셋팅
