		divId = "noticeDBasic";		
		divUrl= "FRAME::noticeDBasic.xfdl";
		//좌표
		x =  856; 
		y = 453;
		objDivComp = new Div(divId, x, y, x+360, y+125);		
		
		this.addChild(divId, objDivComp); 
		objDiv = eval(divId);
				
		//---------------------------------------------
