================================================================================================*/
/*----------------------------------------------------------------------------------------------
 * 설명   : 비밀번호 유효성 검사
 * param   : pwdnew(div_pwd.edt_pwdNew.value)
 * return  : true/false
-----------------------------------------------------------------------------------------------*/
function fn_check_pwd(PWD)
{
    var alpha = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz";
    var number = "1234567890";
    //var sChar = "-_=+|()*&^%$#@!~`?></;,.:'\\";
    var sChar = "(~?!@#$%^&*()_-+={}[]|\\;:`'<>,.?/)\"";

    var sChar_Count = 0;
    var alpha_Count = 0;
    var number_Count = 0;

	var SamePass_0 = 0; //동일문자 카운트
    var SamePass_1 = 0; //연속성(+) 카운드
    var SamePass_2 = 0; //연속성(-) 카운드
  
    var chr_pass_0;
    var chr_pass_1;
    var chr_pass_2;
    	
    if (8 <= PWD.length && PWD.length <= 15 ) {
		
		for (var i=0; i < PWD.length; i++) {
			// 문자, 숫자, 특수문자 포함 Check
            if(sChar.indexOf(PWD.charAt(i)) != -1)  {
                sChar_Count++;
            }
            if(alpha.indexOf(PWD.charAt(i)) != -1) {
                alpha_Count++;
            }
            if(number.indexOf(PWD.charAt(i)) != -1) {
                number_Count++;
            }
            chr_pass_0 = PWD.charAt(i);
            chr_pass_1 = PWD.charAt(i+1);
            chr_pass_2 = PWD.charAt(i+2);
            
            //동일문자 카운트
            if(chr_pass_0 == chr_pass_1 && chr_pass_1 == chr_pass_2) {
       			SamePass_0 = SamePass_0 + 1
            }
            //연속성(+) 카운드
            if(chr_pass_0.charCodeAt(0) - chr_pass_1.charCodeAt(0) == 1 && chr_pass_1.charCodeAt(0) - chr_pass_2.charCodeAt(0) == 1)    {
            	SamePass_1 = SamePass_1 + 1
        	}
        	//연속성(-) 카운드
        	if(chr_pass_0.charCodeAt(0) - chr_pass_1.charCodeAt(0) == -1 && chr_pass_1.charCodeAt(0) - chr_pass_2.charCodeAt(0) == -1)     {
            	SamePass_2 = SamePass_2 + 1
        	}
        }
        
        // 문자, 숫자, 특수문자 포함 Check
        if (sChar_Count < 1 || alpha_Count < 1 || number_Count < 1) {
			gfn_message("A","문자, 숫자, 특수문자 포함되지 않았습니다.","E");
            return false;
        }
        // 동일문자 연속 Check
        if(SamePass_0 > 1)    {
        	gfn_message("A","동일문자를 3번 이상 사용할 수 없습니다.","E");
			return false;
    	}
   		// 연속문자/숫자 Check
    	if(SamePass_1 > 1 || SamePass_2 > 1 )     {
        	gfn_message("A","연속된 문자열(123 또는 321, abc, cba 등)을\n 3자 이상 사용 할 수 없습니다.","E");
        	return false;
    	}
    	
    } else {
		gfn_message("A","비밀번호는 8~15자리 입니다.","E");
		return false;
    }
    
   	return true;
}

/*----------------------------------------------------------------------------------------------
 * 설명   : 저장전 유효성 검사
 * param   : 
 * return  : true/false
-----------------------------------------------------------------------------------------------*/
function fn_chkBeforeSave()
{
	var pwdorg = ds_pwd.getColumn(0,"PWD");
	var pwdnew = div_pwd.edt_pwdNew.value;
	var pwdchk = div_pwd.edt_pwdChk.value;
	var lgid = div_pwd.edt_lgId.value;

	if (!gfn_getValidateCompList(div_pwd)) {	
		return false;
	}
	 if(pwdnew != pwdchk){
	    gfn_message("A","입력하신 비밀번호가 일치하지않습니다.","E");
//		div_pwd.edt_pwdNew.value = "";
		div_pwd.edt_pwdChk.value = "";
		div_pwd.edt_pwdChk.setFocus();
		return false;
	 }
	 if(!fn_check_pwd(pwdnew)){
		//alret("비밀번호생성 규칙에 어긋납니다.");
		div_pwd.edt_pwdNew.value = "";
		div_pwd.edt_pwdChk.value = "";
		div_pwd.edt_pwdNew.setFocus();
		return false;
	 }
	 if(pwdnew.indexOf(lgid)!=-1){
		gfn_message("A","로그인ID 는 비밀번호에 포함될 수 없습니다.","E");
		div_pwd.edt_pwdNew.value = "";
		div_pwd.edt_pwdChk.value = "";
		div_pwd.edt_pwdNew.setFocus();
		return false;
	 }
	
	 return true;
}
