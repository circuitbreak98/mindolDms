<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="dms.nr.XCR007">
	<select id="SEqpSKN" parameterClass="map" resultClass="hmap" fetchSize="50" ><![CDATA[/* Biz: dms.nr.XCR007.SEqpSKN SKN여신에서 채무정보 조회 */
/* IO: 진병수,2015-09-07T17:20:31(진병수,2015-08-10T09:49:43) */
SELECT 'NR'   AS OP_CL_CD /*업무구분코드*/
      , PAY_YM  AS DEBT_XCL_YM    /*채무정산년월*/
      , CRD_CD  AS XCL_CL
      , AGN_CD  AS DEBT_DEALCO_CD
      , 'IN'              AS XCL_ITM_CL
      , PAY_YM_TS AS DEBT_PRCH_TS
      , PROXY_DEALCO_CD
      , TRUNC(SUM (AMT*100/110)) AS DEBT_SURTAX
      , SUM (AMT) - TRUNC(SUM (AMT*100/110)) AS DEBT_ITM_AMT
      , NULL              AS DEBT_SLIP_DT
      , NULL              AS DEBT_CNCL_SLIP_NO
      , NULL              AS DEBT_CNCL_DT      
   FROM (
          SELECT AGN_CD
               , PAY_YM
               , PAY_YM_TS 
               , 'KN' AS CRD_CD
               , '1248100718'  AS PROXY_DEALCO_CD 
               , AGN_CRD_AMT AS AMT
            FROM TB_NR_SKN_CRD
           WHERE PAY_YM = SUBSTR(NVL(#PROC_DT#,TO_CHAR(SYSDATE,'YYYYYMMDD')),1,6) 
             AND AGN_CRD_AMT > 0
           UNION ALL 
          SELECT AGN_CD
               , PAY_YM
               , PAY_YM_TS 
               , 'KD'
               , NULL
               , CRD_SALE_DAMT
            FROM TB_NR_SKN_CRD
           WHERE PAY_YM = SUBSTR(NVL(#PROC_DT#,TO_CHAR(SYSDATE,'YYYYYMMDD')),1,6)
             AND CRD_SALE_DAMT > 0
         )
   GROUP BY AGN_CD, PAY_YM, PAY_YM_TS, CRD_CD, PROXY_DEALCO_CD]]>
	</select>
	<insert id="IXclDebt" parameterClass="map" ><![CDATA[/* Biz: dms.nr.XCR007.IXclDebt 채무정보입력 */
/* IO: 진병수,2015-09-07T17:21:50(진병수,2015-08-10T09:53:17) */
INSERT INTO TB_XCL_DEBT
            (
             OP_CL_CD
           , DEBT_XCL_YM
           , XCL_CL
           , DEBT_DEALCO_CD
           , XCL_ITM_CL
           , DEBT_ITM_AMT
           , DEBT_SURTAX
           , DEBT_SLIP_NO
           , DEBT_SLIP_DT
           , DEBT_ORGL_SLIP_NO
           , DEBT_CNCL_SLIP_NO
           , DEBT_CNCL_DT
           , DEBT_ADJ_BF_AMT
           , DEBT_ADJ_DAMT    
           , DEBT_PRCH_TS
           , PROXY_DEALCO_CD       
           , FS_REG_USER_ID
           , FS_REG_DTM
            , LS_CHG_USER_ID
            , LS_CHG_DTM
            )
     VALUES (
             #OP_CL_CD#
           , #DEBT_XCL_YM#
           , #XCL_CL#
           , #DEBT_DEALCO_CD#
           , #XCL_ITM_CL#
           , #DEBT_ITM_AMT#
           , #DEBT_SURTAX#
           , #DEBT_SLIP_NO#
           , #DEBT_SLIP_DT#
           , #DEBT_ORGL_SLIP_NO#
           , #DEBT_CNCL_SLIP_NO#
           , #DEBT_CNCL_DT#
           , NVL(#DEBT_ADJ_BF_AMT#,0)
           , NVL(#DEBT_ADJ_DAMT#,  0)  
           , #DEBT_PRCH_TS#
           , #PROXY_DEALCO_CD#       
           , nvl(#FS_REG_USER_ID#,'BAT')
           , nvl(#FS_REG_DTM#,sysdate)  
           , nvl(#LS_CHG_USER_ID#,'BAT')
           , nvl(#LS_CHG_DTM#,sysdate)           
            )]]>
	</insert>
</sqlMap>